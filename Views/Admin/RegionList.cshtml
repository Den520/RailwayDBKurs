@model List<Region>
@{
    ViewBag.Title = "Список участков";
}

<h1 class="display-4 text-center">Участки</h1>
<div class="main-content">

    @Html.ActionLink("Добавить участок", "AddRegion", new EmptyResult(), new { @class = "button green float-right" })

    <div>
        <table>
            <thead>
                <tr>
                    <th>Номер участка</th>
                    <th>Протяжённость (км)</th>
                    <th>Дата ввода в эксплуатацию</th>
                    <th>Количество поездов</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var region in Model)
                {
                    <tr>
                        <td>
                            @region.ID
                        </td>
                        <td>
                            @region.Length
                        </td>
                        <td>
                            @if (region.DateOfExploitation != null)
                            {
                                @region.DateOfExploitation.Value.ToShortDateString()
                            }
                            else
                            {
                                <span>Не был введён в эксплуатацию</span>
                            }
                        </td>
                        <td>
                            @region.ValueOfTrains
                        </td>
                        <td>
                            <div class="edit-buttons">
                                @Html.ActionLink("Редактировать", "EditRegion", new { id = region.ID }, new { @class = "button blue" })
                                @Html.ActionLink("Удалить", "DeleteRegion", new { id = region.ID }, new { style = "color: red" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>