@{
    ViewBag.Title = "Добавление рем. события для вагона";
}

<h1 class="display-4 text-center">Добавить рем. событие для вагона</h1>
<div class="main-content">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()

        <div>
            <p>Ответственное депо</p>
            @Html.DropDownList("DepotID", (SelectList)ViewBag.depots)
        </div>
        <br />
        <div>
            <p>Дата начала</p>
            @Html.TextBox("BeginDate", $"{@DateTime.Now.Year}-01-01", new { type="date" })
        </div>
        <br />
        <div>
            <p>Дата окончания</p>
            @Html.TextBox("EndDate", @DateTime.Now.ToString("yyyy-MM-dd"), new { type="date" })
        </div>
        <br />
        <div>
            <p>Текущий статус</p>
            @Html.DropDownList("Status", new SelectList(new [] { "В очереди", "В процессе", "Завершено", "Приостановлено", "Заброшено" }))
        </div>
        <br />
        <div>
            <p>Детальное описание (необязательно)</p>
            @Html.TextBox("Description")
        </div>
        <br />
        <div>
            <p>Номер ремонтируемого вагона</p>
            @Html.DropDownList("VanID", (SelectList)ViewBag.vans)
        </div>
        <br />
        <div>
            <p>Список ремонтируемых деталей (частей) вагона</p>
            @Html.TextBox("ListOfRepairedParts", "", new { required="" })
        </div>
        <br />

        <a href="#" onclick="window.history.back()">Отмена</a>
        <input class="button green" type="submit" value="Добавить" />
    }
</div>